@model Movie
 
<div class="album py-5 bg-light">
    <div class="container" style="padding-top:20px">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("Menu")
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img class="card-img-top" src="~/img/@Model.Image" alt="@Model.Name" style="width:250px; height:200px; padding-left:20px;padding-top:20px">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Description</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

